# HVAC Production Environment Configuration
# "Pasja rodzi profesjonalizm" - Professional HVAC Production Setup
# 
# Copy this file to .env.hvac-production and fill in your production values
# NEVER commit the actual .env.hvac-production file to version control

# ==================== CORE TWENTY CONFIGURATION ====================

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# Authentication Secrets (Generate strong random strings)
ACCESS_TOKEN_SECRET=your_access_token_secret_here
LOGIN_TOKEN_SECRET=your_login_token_secret_here
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
FILE_TOKEN_SECRET=your_file_token_secret_here

# ==================== HVAC CONFIGURATION ====================

# HVAC API Configuration
HVAC_API_KEY=your_hvac_api_key_here
HVAC_SENTRY_DSN=your_sentry_dsn_here

# Weaviate Configuration
WEAVIATE_API_KEY=your_weaviate_api_key_here

# ==================== EMAIL CONFIGURATION ====================

# SMTP Configuration for Polish providers
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_email@fulmark.pl
EMAIL_SMTP_PASSWORD=your_email_password_here

# ==================== STORAGE CONFIGURATION ====================

# AWS S3 Configuration
AWS_REGION=eu-central-1
S3_BUCKET_NAME=fulmark-hvac-storage
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# ==================== MONITORING CONFIGURATION ====================

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here

# ==================== SSL CERTIFICATES ====================

# SSL Certificate Paths (Let's Encrypt recommended)
SSL_CERT_PATH=/etc/letsencrypt/live/fulmark.pl/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/fulmark.pl/privkey.pem

# ==================== POLISH INTEGRATIONS ====================

# Polish Energy Providers API Keys (Optional)
PGE_API_KEY=your_pge_api_key_here
TAURON_API_KEY=your_tauron_api_key_here
ENEA_API_KEY=your_enea_api_key_here

# Polish HVAC Manufacturers API Keys (Optional)
VAILLANT_API_KEY=your_vaillant_api_key_here
VIESSMANN_API_KEY=your_viessmann_api_key_here
BOSCH_API_KEY=your_bosch_api_key_here

# ==================== BACKUP CONFIGURATION ====================

# Database Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=fulmark-hvac-backups

# ==================== SECURITY CONFIGURATION ====================

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=1000       # Max requests per window

# CORS Origins (comma-separated)
CORS_ORIGINS=https://crm.fulmark.pl,https://app.fulmark.pl,https://monitoring.fulmark.pl

# ==================== PERFORMANCE CONFIGURATION ====================

# Cache Configuration
CACHE_TTL=300000          # 5 minutes
MAX_CONCURRENT_REQUESTS=100

# Database Connection Pool
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=30000

# ==================== LOGGING CONFIGURATION ====================

# Log Levels: error, warn, info, debug
LOG_LEVEL=info
ENABLE_STRUCTURED_LOGGING=true

# Log Retention
LOG_RETENTION_DAYS=90
LOG_MAX_SIZE=100MB

# ==================== FEATURE FLAGS ====================

# HVAC Features
HVAC_ENABLE_SCHEDULING=true
HVAC_ENABLE_MAINTENANCE=true
HVAC_ENABLE_INVENTORY=true
HVAC_ENABLE_SEMANTIC_SEARCH=true
HVAC_ENABLE_AI_INSIGHTS=true
HVAC_ENABLE_CUSTOMER_360=true
HVAC_ENABLE_MOBILE_APP=true
HVAC_ENABLE_OFFLINE_SYNC=true

# Polish Market Features
HVAC_ENABLE_POLISH_INTEGRATIONS=true
HVAC_ENABLE_ENERGY_MONITORING=true
HVAC_ENABLE_MANUFACTURER_APIS=true

# ==================== MOBILE APP CONFIGURATION ====================

# Mobile App Settings
MOBILE_APP_VERSION=1.0.0
MOBILE_SYNC_INTERVAL=300000  # 5 minutes
MOBILE_OFFLINE_STORAGE_LIMIT=100MB

# Push Notifications
FIREBASE_SERVER_KEY=your_firebase_server_key_here
FIREBASE_PROJECT_ID=fulmark-hvac-mobile

# ==================== AI CONFIGURATION ====================

# OpenAI Configuration for AI Features
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Bielik AI Configuration (Polish AI)
BIELIK_API_URL=https://api.bielik.ai
BIELIK_API_KEY=your_bielik_api_key_here

# ==================== ANALYTICS CONFIGURATION ====================

# Google Analytics
GA_TRACKING_ID=your_ga_tracking_id_here

# Custom Analytics
ANALYTICS_ENDPOINT=https://analytics.fulmark.pl
ANALYTICS_API_KEY=your_analytics_api_key_here

# ==================== DEPLOYMENT CONFIGURATION ====================

# Docker Registry
DOCKER_REGISTRY=registry.fulmark.pl
DOCKER_IMAGE_TAG=latest

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=30s
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_RETRIES=3

# ==================== MAINTENANCE CONFIGURATION ====================

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System maintenance in progress. Please try again later."

# Scheduled Maintenance
MAINTENANCE_SCHEDULE=0 3 * * 0  # Weekly on Sunday at 3 AM
MAINTENANCE_DURATION=2h

# ==================== COMPLIANCE CONFIGURATION ====================

# GDPR Compliance
GDPR_ENABLED=true
DATA_RETENTION_PERIOD=2555  # 7 years in days
COOKIE_CONSENT_REQUIRED=true

# Polish Regulations
POLISH_VAT_RATE=23
POLISH_COMPANY_REGISTRATION=your_krs_number_here
POLISH_TAX_ID=your_nip_number_here

# ==================== DEVELOPMENT OVERRIDES ====================

# Set to true only for staging/development environments
DEBUG_MODE=false
ENABLE_CORS_ALL_ORIGINS=false
DISABLE_RATE_LIMITING=false
ENABLE_SQL_LOGGING=false

# ==================== NOTES ====================

# 1. Generate strong passwords using: openssl rand -base64 32
# 2. Use Let's Encrypt for SSL certificates: certbot certonly --webroot
# 3. Configure firewall to allow only necessary ports: 80, 443, 22
# 4. Set up automated backups to S3 or similar cloud storage
# 5. Monitor logs and metrics regularly
# 6. Update dependencies and security patches regularly
# 7. Test disaster recovery procedures periodically

# For more information, see: https://docs.fulmark.pl/hvac/production-setup
