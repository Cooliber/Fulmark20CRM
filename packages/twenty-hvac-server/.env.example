# HVAC Server Configuration
# "Pasja rodzi profesjonalizm" - Professional HVAC Configuration

# Server Configuration
PORT=3002
NODE_ENV=development
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://twenty:twenty@localhost:5432/twenty_hvac
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=twenty
DATABASE_PASSWORD=twenty
DATABASE_NAME=twenty_hvac

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
HVAC_REDIS_DB=2

# HVAC API Configuration
HVAC_API_URL=http://localhost:8000
HVAC_API_KEY=your_hvac_api_key_here
HVAC_API_VERSION=v1
HVAC_API_TIMEOUT=30000
HVAC_API_RETRY_ATTEMPTS=3
HVAC_API_RETRY_DELAY=1000

# Weaviate Configuration
WEAVIATE_HOST=localhost
WEAVIATE_PORT=8080
WEAVIATE_SCHEME=http
WEAVIATE_API_KEY=

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Sentry Configuration
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
HVAC_ENABLE_SENTRY=false

# Monitoring
HVAC_ENABLE_HEALTH_CHECKS=true
HVAC_HEALTH_CHECK_INTERVAL=30000
HVAC_ENABLE_METRICS=true
HVAC_METRICS_PORT=9464
HVAC_LOG_LEVEL=info

# Polish HVAC Specific
HVAC_POLISH_REGION=warsaw
HVAC_ENABLE_IOT=true
HVAC_ENABLE_ENERGY_MANAGEMENT=true

# External Integrations
HVAC_ENABLE_WEATHER_API=true
WEATHER_API_KEY=
ENERGY_PROVIDER_API_KEY=

# Performance
HVAC_ENABLE_CACHING=true
HVAC_CACHE_TTL=3600
HVAC_ENABLE_COMPRESSION=true
HVAC_ENABLE_RATE_LIMITING=true