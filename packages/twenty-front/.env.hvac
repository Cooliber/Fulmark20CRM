# Priority Levels
NEXT_PUBLIC_TICKET_PRIORITIES=Low,Medium,High,Critical,Emergency

# ==================== DEVELOPMENT CONFIGURATION ====================
# Development Features
NEXT_PUBLIC_DEV_TOOLS_ENABLED=true
NEXT_PUBLIC_MOCK_DATA_ENABLED=false

# ==================== SECURITY ====================
# CSRF Protection
NEXT_PUBLIC_CSRF_ENABLED=true

# Content Security Policy
NEXT_PUBLIC_CSP_ENABLED=true

# ==================== PERFORMANCE ====================
# Caching
NEXT_PUBLIC_CACHE_ENABLED=true
NEXT_PUBLIC_CACHE_TTL=300

# Lazy Loading
NEXT_PUBLIC_LAZY_LOADING_ENABLED=true

# ==================== ACCESSIBILITY ====================
# A11y Configuration
NEXT_PUBLIC_A11Y_ENABLED=true
NEXT_PUBLIC_HIGH_CONTRAST_MODE=false

# ==================== POLISH BUSINESS COMPLIANCE ====================
# GDPR Configuration
NEXT_PUBLIC_GDPR_ENABLED=true
NEXT_PUBLIC_COOKIE_CONSENT_REQUIRED=true

# Polish Business Standards
NEXT_PUBLIC_NIP_VALIDATION_ENABLED=true
NEXT_PUBLIC_REGON_VALIDATION_ENABLED=true
NEXT_PUBLIC_PESEL_VALIDATION_ENABLED=true

# ==================== NOTIFICATION CONFIGURATION ====================
