# Copy this file to .env.local and update with your actual values

# ==================== CORE FRONTEND CONFIGURATION ====================
# Development Mode
NODE_ENV=development
NEXT_PUBLIC_NODE_ENV=development

# API Endpoints
NEXT_PUBLIC_SERVER_URL=http://localhost:3001
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3002

# ==================== HVAC BACKEND INTEGRATION ====================
# HVAC FastAPI Backend
NEXT_PUBLIC_HVAC_API_URL=http://localhost:8000
NEXT_PUBLIC_HVAC_API_VERSION=v1

# Weaviate Semantic Search
NEXT_PUBLIC_WEAVIATE_URL=http://localhost:8080
NEXT_PUBLIC_WEAVIATE_ENABLED=true

# ==================== AUTHENTICATION ====================
# Auth Configuration
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_SIGN_IN_PREFILLED=true
NEXT_PUBLIC_IS_MULTIWORKSPACE_ENABLED=true

# ==================== POLISH LOCALIZATION ====================
# Language and Locale
NEXT_PUBLIC_DEFAULT_LANGUAGE=pl
NEXT_PUBLIC_LOCALE=pl_PL
NEXT_PUBLIC_TIMEZONE=Europe/Warsaw
NEXT_PUBLIC_CURRENCY=PLN

# Company Information
NEXT_PUBLIC_COMPANY_NAME=Fulmark HVAC
NEXT_PUBLIC_COMPANY_EMAIL=info@fulmark.pl
NEXT_PUBLIC_COMPANY_PHONE=+48123456789

# ==================== HVAC SPECIFIC FEATURES ====================
# Feature Flags
NEXT_PUBLIC_FEATURE_HVAC_SCHEDULING=true
NEXT_PUBLIC_FEATURE_HVAC_MAINTENANCE=true
NEXT_PUBLIC_FEATURE_HVAC_INVENTORY=true
NEXT_PUBLIC_FEATURE_SEMANTIC_SEARCH=true
NEXT_PUBLIC_FEATURE_AI_INSIGHTS=true
NEXT_PUBLIC_FEATURE_CUSTOMER_360=true

# ==================== UI/UX CONFIGURATION ====================
# Theme Configuration
NEXT_PUBLIC_THEME_MODE=dark
NEXT_PUBLIC_PRIMARY_COLOR=#1976d2
NEXT_PUBLIC_SECONDARY_COLOR=#dc004e

# PrimeReact Configuration
NEXT_PUBLIC_PRIMEREACT_THEME=lara-dark-blue
NEXT_PUBLIC_PRIMEFLEX_ENABLED=true

# ==================== MONITORING & ANALYTICS ====================
# Sentry Frontend Monitoring - Fulmark20CRM
NEXT_PUBLIC_SENTRY_DSN=https://5331a673ab5282e09123189220a65c5c@o4509515687460864.ingest.de.sentry.io/4509517242302544
